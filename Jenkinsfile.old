pipeline {
  agent any 
tools {
     maven 'maven'
  }
  stages {
  stage ('Initialize') {
steps {
 echo 'Hello'
}
  }
   stage ('Chek-Git_Secrets') {
steps {
sh 'rm trufflehog || true'
sh 'docker run gesellix/trufflehog --json https://github.com/masud0932/webapp.git > trufflehog'
sh 'cat trufflehog'
}
  }
    stage ('SCA Test') {
steps {
 sh 'rm owasp* || true'
 sh 'wget https://raw.githubusercontent.com/masud0932/webapp/refs/heads/master/owasp-dependency-check.sh'
 sh 'chmod +x owasp-dependency-check.sh'
 sh 'bash owasp-dependency-check.sh'
 sh 'cat /var/lib/jenkins/OWASP-Dependency-Check/reports/dependency-check-report.xml'

}
  }

   stage ('SAST Test') {
steps {
withSonarQubeEnv ('sonar') {
 sh 'mvn sonar:sonar'
 sh 'cat target/sonar/report-task.txt'
}
}
  }

    stage ('Build') {
steps {
 sh 'mvn clean package'
}
  }
     stage ('Deploy') {
steps {
sshagent(['tomcat']) {
 sh 'scp -o StrictHostKeyChecking=no target/*.war ubuntu@13.49.70.119:/opt/apache-tomcat-10.1.40/webapps/webapp.war'
}
}
  }
}
}

