pipeline {
  agent any 
tools {
     maven 'maven'
  }
  stages {
  stage ('Initialize') {
steps {
 echo 'Hello'
}
  }
   stage ('Chek-Git_Secrets') {
steps {
sh 'rm trufflehog || true'
